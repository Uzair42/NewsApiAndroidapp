<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nestedFrame"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/ic_launcher_background"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question"
            android:text="Quesion related to check box"
            android:textStyle="bold"
            android:textSize="25sp"

            />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opiton 1"
            android:id="@+id/opt1"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opiton 2"
            android:id="@+id/opt2"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opiton 3"
            android:id="@+id/opt3"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opiton 4"
            android:id="@+id/opt4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rbnestedFrame"
        android:padding="10dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rbquestion"
            android:text="Quesion related to check box"
            android:textStyle="bold"
            android:textSize="25sp"

            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opiton 1"
            android:id="@+id/rbopt1"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opiton 2"
            android:id="@+id/rbopt2"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opiton 3"
            android:id="@+id/rbopt3"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opiton 4"
            android:id="@+id/rbopt4"/>

    </LinearLayout>




</LinearLayout>